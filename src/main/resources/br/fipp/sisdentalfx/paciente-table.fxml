<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="640.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.fipp.sisdentalfx.pacienteTable">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="64.0" style="-fx-background-color: lightgray;">
         <children>
            <TextField fx:id="tfpesquisa" onKeyTyped="#onFiltrar" prefHeight="48.0" prefWidth="437.0" promptText="Digite uma palavra para busca" />
            <Button fx:id="btnovo" mnemonicParsing="false" onAction="#onNovoPaciente" prefHeight="47.0" prefWidth="62.0" text="NOVO" />
         </children>
      </HBox>
      <TableView fx:id="tabela" prefHeight="551.0" prefWidth="720.0">
        <columns>
          <TableColumn fx:id="colid" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colnome" prefWidth="75.0" text="NOME" />
            <TableColumn fx:id="colfone" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" text="TELEFONE" />
            <TableColumn fx:id="colcidade" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" text="CIDADE" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" text="Alterar" onAction="#onAlterar" />
                  <MenuItem mnemonicParsing="false" text="Apagar" onAction="#onApagar"/>
              </items>
            </ContextMenu>
         </contextMenu>
      </TableView>
   </children>
</VBox>
